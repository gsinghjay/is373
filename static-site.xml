figcaption {
    margin-top: var(--space-md);
    font-size: var(--font-size-sm);
    color: var(--gray-500);
    font-style: italic;
    text-align: center
    }
/* Buttons */
button {
    font-family: inherit;
    font-size: inherit;
    cursor: pointer;
    border: none;
    background: none
