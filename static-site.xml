    top: var(--space-md);
    outline: 3px solid var(--white);
    outline-offset: 2px
    }
/* Focus visible for better keyboard navigation */
*:focus-visible {
    outline: 2px solid var(--coral-700);
    outline-offset: 2px;
    border-radius: 2px
    }
button:focus-visible, .btn:focus-visible {
    outline: 3px solid var(--coral-700);
    outline-offset: 3px
    }
/* ====================== 3. LAYOUT SYSTEM ====================== */
.container {
    width: 100%;
    max-width: 1200px;
