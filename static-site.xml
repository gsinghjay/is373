p:last-child {
    margin-bottom: 0
    }
/* Adjacent paragraphs need proper spacing */
p + p {
    margin-top: var(--space-xl)
    }
/* Paragraph after heading needs less space */
h1 + p, h2 + p, h3 + p, h4 + p, h5 + p, h6 + p {
    margin-top: 0
    }
.lead {
    font-size: var(--font-size-lg);
