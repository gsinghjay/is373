    text-decoration: none;
    transition: color var(--transition-fast), opacity var(--transition-fast)
    }
a:hover {
    color: var(--coral-700)
    }
a:focus {
    outline: 2px solid var(--coral-700);
    outline-offset: 2px;
    border-radius: 2px
    }
a:focus:not(:focus-visible) {
    outline: none
    }
a:focus-visible {
    outline: 2px solid var(--coral-700);
    outline-offset: 2px
    }
/* Text Emphasis */
strong, b {
    font-weight: var(--font-weight-bold);
    color: var(--navy-700)
    }
em, i {
    font-style: italic
    }
small {
