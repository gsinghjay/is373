    background: linear-gradient(135deg, var(--coral-500) 0%, var(--coral-600) 50%, var(--coral-700) 100%);
    color: white;
    box-shadow: 0 2px 6px rgba(255, 107, 107, 0.3), 0 1px 3px rgba(0, 0, 0, 0.12);
    border: none;
    font-weight: 600;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
