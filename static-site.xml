.top-bar-left {
    flex-wrap: nowrap;
    }
.top-bar-link {
    color: rgba(255, 255, 255, 0.95);
    gap: 0.375rem;
    transition: var(--transition-fast);
    text-decoration: none;
    white-space: nowrap;
