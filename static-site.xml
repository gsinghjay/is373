    transition: width var(--transition-base);
    border-radius: var(--radius-sm)
    }
.nav-link:hover {
    color: var(--coral-700)
    }
.nav-link:hover::after, .nav-link.active::after {
    width: 100%
    }
.nav-link.active {
    color: var(--coral-700);
    font-weight: var(--font-weight-semibold)
