.logo:hover {
    opacity: 0.85
    }
.logo-text {
    gap: 0.5rem
    }
.logo-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--navy-700);
    letter-spacing: -0.02em;
    line-height: 1;
    white-space: nowrap
